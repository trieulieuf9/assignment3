<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <%= link_to "Log In", new_session_path, class:"nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "Sign Up", new_user_path, class:"nav-link" %>
      </li>
    </ul>
  </nav>
  <br><br><br>
  <% if current_user %>
  <div class= "alert alert-info">
    <span> Hello, <%= current_user.name %> </span>

    <span><%= link_to "Log Out", session_path(session[:user_id]), method: "delete"%>|</span>
    <span><%= link_to " Create Event ", new_event_path%>| </span>
    <span><%= link_to " Create Ticket Type ", new_ticket_type_path%>| </span>
    <span><%= link_to " Create Venue ", new_venue_path %> </span>
  <%end%>
  </div>
  <%if flash.any? %>
      <%flash.each do |key, value| %>
        <div class="alert <%= flash_class_name(key) %>">
          <%=value%>
        </div>
      <%end%>
    <%end%>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
